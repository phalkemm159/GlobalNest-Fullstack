<% layout("/layouts/boilerplate") %>
    <div class="row mt-4">
        <div class="col-8 offset-2">
            <h3>Edit the Listings</h3>
            <form class="mt-4 needs-validation" method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate enctype="multipart/form-data" >
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required/>
                    <div class="valid-feedback">Title Looks Greate.</div>
                    <div class="invalid-feedback">Please enter a title</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
                    <div class="valid-feedback">Perfect Description.</div>
                    <div class="invalid-feedback">Please enter short description</div>
                </div>

                <!-- //had removed url in name of input value -->
                <div class="mb-3">
                Original Listing Image: <br>
                <img class="orgImgUrl" src="<%= originalImageUrl %>" />
                </div>
                
                <div class="mb-3">
                    <label class="form-label" for="image">Upload New Image:</label>
                    <input type="file" name="listing[image]"  class="form-control" >
                    <div class="valid-feedback">Perfect.</div>
                    <div class="invalid-feedback">Please Enter valid Link.</div>
                </div>

                <div class="row">

                    <div class="mb-3 col-md-4">
                        <label class="form-label" for="price">Price:</label>
                        <input type="number" name="listing[price]" value="<%= listing.price %>" / class="form-control" required>
                        <div class="valid-feedback">Perfect price.</div>
                        <div class="invalid-feedback">Enter a valid price.</div>
                    </div>
    
                    <div class="mb-3 col-md-8">
                        <label class="form-label" for="country">Country:</label>
                        <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required/>
                        <div class="valid-feedback">Nicely Done.</div>
                        <div class="invalid-feedback">Please enter valid country.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required/>
                    <div class="valid-feedback">Nicely Done.</div>
                    <div class="invalid-feedback">Please enter a valid location.</div>
                </div>

                <button class="edit-btn btn btn-dark edit-btn mt-3 mb-5">Edit Listing</button>
                
            </form>
        </div>
    </div>

