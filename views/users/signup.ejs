<% layout("/layouts/boilerplate") %>

    <div class="row mt-4">
        <h1 class="col-6 offset-2">SignUp on GlobalNest</h1>
        <div class="col-8 offset-2">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mt-4 mb-3">
                    <label for="username" class="form-label">Username : </label>
                    <input type="text" id="username" name="username" class="form-control" required />
                    <div class="valid-feedback">Looks Great.</div>
                    <div class="invalid-feedback">Needs Username.</div>
                </div>

                <div class="mt-4 mb-3">
                    <label for="email" class="form-label">Email ID : </label>
                    <input type="text" id="email" name="email" class="form-control" required />
                    <div class="invalid-feedback">Enter a valid Email ID.</div>
                </div>
             
                <div class="mt-4 mb-3">
                    <label for="password" class="form-label">Password : </label>
                    <input type="text" id="password" name="password" class="form-control" required />
                    <div class="invalid-feedback">Password is Needed.</div>
                </div>
                <button class="btn btn-success mb-5" style="background-color: green;">SignUp</button>
            </form>
        </div>
    </div>